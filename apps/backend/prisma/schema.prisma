// apps/backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------- ENUMS ----------

enum UserRole {
  ADMIN
  MANAGER
  OPERATOR
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

enum VerificationStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum ProductionStage {
  CUTTING
  STITCHING
  QUALITY_CHECK
  REWORK
  LABELING
  FOLDING
  PACKING
}

enum BatchStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum MachineStatus {
  OPERATIONAL
  MAINTENANCE
  OUT_OF_ORDER
}

enum Severity {
  MINOR
  MAJOR
  CRITICAL
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ReworkStage {
  CUTTING
  STITCHING
}

enum ReworkOutcome {
  CURED
  SCRAPPED
}

enum ReworkStatus {
  PENDING
  COMPLETED
}

enum BoxStatus {
  PACKED
  SHIPPED
  DELIVERED
}

// ---------- MODELS ----------

model User {
  id                 Int                @id @default(autoincrement())
  employeeCode       String             @unique
  email              String?            @unique
  password           String
  fullName           String
  role               UserRole
  status             UserStatus         @default(ACTIVE)
  verificationStatus VerificationStatus @default(PENDING)
  verifiedAt         DateTime?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  // Hierarchy
  createdByUserId  Int?
  verifiedByUserId Int?

  creator User?  @relation("UserCreated", fields: [createdByUserId], references: [id])
  created User[] @relation("UserCreated")

  verifier User?  @relation("UserVerified", fields: [verifiedByUserId], references: [id])
  verified User[] @relation("UserVerified")

  // Section ownership
  sectionAssignments SectionAssignment[]

  // Production logs
  performedLogs ProductionLog[] @relation("PerformedLogs")
  recordedLogs  ProductionLog[] @relation("RecordedLogs")
  approvedLogs  ProductionLog[] @relation("ApprovedLogs")

  // Defects
  detectedDefects DefectRecord[] @relation("DetectedDefects")

  // Rework
  performedRework ReworkRecord[] @relation("PerformedRework")
  managedRework   ReworkRecord[] @relation("ManagedRework")
  approvedRework  ReworkRecord[] @relation("ApprovedRework")
}

model SectionAssignment {
  id        Int             @id @default(autoincrement())
  userId    Int
  stage     ProductionStage
  createdAt DateTime        @default(now())

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, stage])
}

model Batch {
  id                Int             @id @default(autoincrement())
  batchNumber       String          @unique
  briefTypeName     String
  totalQuantity     Int
  usableQuantity    Int             @default(0)
  defectiveQuantity Int             @default(0)
  scrappedQuantity  Int             @default(0)
  currentStage      ProductionStage @default(CUTTING)
  status            BatchStatus     @default(PENDING)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  productionLogs ProductionLog[]
  defectRecords  DefectRecord[]
  reworkRecords  ReworkRecord[]
  boxes          Box[]
}

model Machine {
  id          Int           @id @default(autoincrement())
  machineCode String        @unique
  name        String
  type        String?
  status      MachineStatus @default(OPERATIONAL)
  location    String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  productionLogs ProductionLog[]
}

model ProductionLog {
  id               Int             @id @default(autoincrement())
  batchId          Int
  stage            ProductionStage
  operatorUserId   Int
  recordedByUserId Int
  machineId        Int?
  startTime        DateTime
  endTime          DateTime?
  quantityIn       Int
  quantityOut      Int?

  // Approval gate (CRITICAL)
  approvalStatus   ApprovalStatus @default(PENDING)
  approvedByUserId Int?
  approvedAt       DateTime?
  rejectionReason  String?

  createdAt DateTime @default(now())

  batch      Batch    @relation(fields: [batchId], references: [id])
  operator   User     @relation("PerformedLogs", fields: [operatorUserId], references: [id])
  recordedBy User     @relation("RecordedLogs", fields: [recordedByUserId], references: [id])
  approvedBy User?    @relation("ApprovedLogs", fields: [approvedByUserId], references: [id])
  machine    Machine? @relation(fields: [machineId], references: [id])
}

model DefectRecord {
  id               Int             @id @default(autoincrement())
  batchId          Int
  stage            ProductionStage @default(QUALITY_CHECK)
  defectCode       String
  quantity         Int
  severity         Severity
  detectedByUserId Int
  createdAt        DateTime        @default(now())

  batch      Batch @relation(fields: [batchId], references: [id])
  detectedBy User  @relation("DetectedDefects", fields: [detectedByUserId], references: [id])
}

model ReworkRecord {
  id               Int            @id @default(autoincrement())
  batchId          Int
  reworkStage      ReworkStage
  quantity         Int
  operatorUserId   Int
  managedByUserId  Int
  status           ReworkStatus   @default(PENDING)
  outcome          ReworkOutcome?
  curedQuantity    Int            @default(0)
  scrappedQuantity Int            @default(0)
  startTime        DateTime       @default(now())
  endTime          DateTime?

  // Approval gate (STRICTLY ENFORCED)
  approvalStatus   ApprovalStatus @default(PENDING)
  approvedByUserId Int?
  approvedAt       DateTime?
  rejectionReason  String?

  createdAt DateTime @default(now())

  batch      Batch @relation(fields: [batchId], references: [id])
  operator   User  @relation("PerformedRework", fields: [operatorUserId], references: [id])
  managedBy  User  @relation("ManagedRework", fields: [managedByUserId], references: [id])
  approvedBy User? @relation("ApprovedRework", fields: [approvedByUserId], references: [id])
}

model Box {
  id        Int       @id @default(autoincrement())
  boxCode   String    @unique
  batchId   Int
  quantity  Int
  status    BoxStatus @default(PACKED)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  batch Batch @relation(fields: [batchId], references: [id])
}
